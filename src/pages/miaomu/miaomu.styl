.container {
  padding: 60px 0;
  overflow: hidden;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
}

.text-container {
  width: calc(100% - 235px);
  box-sizing: border-box;
  float: left;
  padding: 10px 30px;
  position: relative;
}

.menu {
  width: 235px;
  background: url('../../assets/images/about/left_nav_bg.jpg') right top no-repeat;
  float: left;
  min-height: 406px;

  .img-group {
    text-align: center;

    img {
      &:first-child {
        vertical-align: 10px;
        margin-right: 15px;
      }
    }
  }
}

.list-content {
  width calc(100% - 245px)
  float left
  box-sizing border-box
  // padding 20px 30px
  position relative
  .list-title {
    font-size 22px
    padding-left 30px
  }
  .more-btn {
    position absolute
    top 15px
    right 50px
  }
  .list {
    width 100%
    overflow hidden
    padding-left 30px
    box-sizing: border-box
    >div {
      width 192px
      height 223px
      float left
      margin 15px
      cursor pointer
      p {
        font-size 16px
        text-align center
        overflow hidden
        white-space nowrap
        text-overflow:ellipsis;
        margin  5px 0
      }
      >img {
        display block
        width 100%
        height 192px
        box-sizing border-box
        border 1px solid #dbcbab
        border-radius 4px
      }
    }
  }
}
.body-button {
  color: white!important
  background-color: #c0a264!important
  outline: none;

  &:hover {
    background-color: #c0a264;
    border-color: #c0a264;
  }

  &:active {
    box-shadow: none;
    background-color: #c0a264;
    border-color: #c0a264;
  }
}

@media screen and (max-width: 960px) {
  .container {
    width: 100%;

    .list-content {
      width: 100%;
      margin-left 0
      .list {
        >div {
          display block
          float none
          margin 5px auto
        }
      }
    }
  }
}