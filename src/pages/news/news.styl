.container {
    padding: 60px 0;
    overflow: hidden;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
}

.menu {
    width: 235px;
    background: url('../../assets/images/about/left_nav_bg.jpg') right top no-repeat;
    float: left;
    min-height: 406px;

    .img-group {
        text-align: center;

        img {
            &:first-child {
                vertical-align: 10px;
                margin-right: 15px;
            }
        }
    }
}

.text-container {
    width: calc(100% - 235px);
    box-sizing: border-box;
    float: left;
    padding: 10px 30px;
    position: relative;
}

.line {
    position: absolute;
    left: 10px;
    bottom: 0;
    width: 1px;
    background: url('../../assets/images/good_list_bg.png') top center repeat-y;
    height: 70%;
}

.list-group {
    margin-bottom: 25px;
    height: 180px;
    padding-bottom: 30px;
    border-bottom: 1px solid #e9e0cf;
    overflow: hidden;

    .img {
        width: 187px;
        height: 104px;
        float: left;
        padding: 4px;
        border: 1px solid #e3d7bf;
    }

    .content {
        width: calc(100% - 197px);
        height: 180px;
        position: relative;
        box-sizing: border-box;
        padding-left 30px
        float: left;

        h1 {
            line-height: 16px;
            display: block;
            width: 80%;
            color: #666666;
            font-size: 16px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            font-weight normal
        }
        .date {
            color: #999999;
            font-size: 14px;
            margin: 8px 0 5px;
            >span {
                color: #c0a264;
            }
        }
        p {
            color: #999999;
            line-height: 24px;
            font-size: 12px;
        }

        .body-button {
            color: white;
            background-color: #c0a264;
            outline: none;

            &:hover {
                background-color: #c0a264;
                border-color: #c0a264;
            }

            &:active {
                box-shadow: none;
                background-color: #c0a264;
                border-color: #c0a264;
            }
        }
    }
}


@media screen and (max-width: 960px) {
    .text-container {
        width: 100%;
        padding 10px

        .img,.line {
            display: none;
        }

        .content {
            width: 100%;
        }
    }

}