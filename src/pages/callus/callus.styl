:global{
  .mapContainer{
     padding 20px;
   }
}
.index-page {
  width 100%
  max-width 1200px;
  margin 0 auto
  padding 30px 0
  overflow hidden
}
.menu {
    width: 235px;
    background: url('../../assets/images/about/left_nav_bg.jpg') right top no-repeat;
    float: left;
    min-height: 406px;

    .img-group {
        text-align: center;
        img {
            &:first-child {
                vertical-align: 10px;
                margin-right: 15px;
            }
        }
    }
}
.content {
    width calc(100% - 235px)
    float left
}
.phone-number {
   margin-left 50px

   >img {
      margin-right 10px
      float left
   }
}

.fax {
   margin-left 50px

   >img {
      margin-right 10px
      float left
   }
}

.address {
   margin-left 50px

   >img {
      margin-right 10px
      float left
   }
}
.path2 {
  background-color white
  padding 10px 20px
  margin 10px
  box-sizing border-box
}
.body-button {
  color: white;
  background-color: #c0a264!important
  outline: none;

  &:hover {
    background-color: #c0a264;
    border-color: #c0a264;
  }

  &:active {
    box-shadow: none;
    background-color: #c0a264;
    border-color: #c0a264;
  }
}

@media screen and (max-width: 960px) {
  .content {
    width 100%
  }
}