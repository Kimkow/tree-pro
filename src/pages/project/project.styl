:global {
    .myScroll {
        max-height: 140px;

        .scrollbar-container {
            &:hover {
                background-color: transparent !important;
            }
        }

        .scrollbar {
            background-color: rgb(192, 162, 100) !important;
            border-radius: 4px;
        }
    }
}

.container {
    padding: 60px 0;
    overflow: hidden;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
}

.menu {
    width: 235px;
    background: url('../../assets/images/about/left_nav_bg.jpg') right top no-repeat;
    float: left;
    min-height: 406px;

    .img-group {
        text-align: center;

        img {
            &:first-child {
                vertical-align: 10px;
                margin-right: 15px;
            }
        }
    }
}

.text-container {
    width: calc(100% - 235px);
    box-sizing: border-box;
    float: left;
    padding: 10px 30px;
    position: relative;
}

.line {
    position: absolute;
    left: 10px;
    bottom: 0;
    width: 1px;
    background: url('../../assets/images/good_list_bg.png') top center repeat-y;
    height: 70%;
}

.list-group {
    border: 1px solid #f0e6d0;
    margin-bottom: 20px;
    height: 158px;
    overflow: hidden;

    &:hover {
        border-color: #cba650;
    }

    .img {
        width: 258px;
        height: 158px;
        float: left;
    }

    .content {
        width: calc(100% - 258px);
        box-sizing: border-box;
        padding-left: 30px;
        float: left;

        h1 {
            display: block;
            width: 80%;
            color: #666666;
            font-size: 16px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            margin: 23px 0 10px;
            font-weight: normal;
        }

        p {
            color: #999999;
            line-height: 20px;
            font-size: 12px;
        }

        .body-button {
            color: white;
            background-color: #c0a264;
            outline: none;

            &:hover {
                background-color: #c0a264;
                border-color: #c0a264;
            }

            &:active {
                box-shadow: none;
                background-color: #c0a264;
                border-color: #c0a264;
            }
        }
    }
}


@media screen and (max-width: 960px) {
    .text-container {
        width: 100%;
        padding 10px

        .img,.line {
            display: none;
        }

        .content {
            width: 100%;
        }
    }

}