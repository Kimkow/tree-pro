:global {
    .myScroll {
        max-height: 140px;

        .scrollbar-container {
            &:hover {
                background-color: transparent !important;
            }
        }

        .scrollbar {
            background-color: rgb(192, 162, 100) !important;
            border-radius: 4px;
        }
    }
}

.container {
    padding: 60px 0;
    overflow: hidden;
}

.menu {
    width: 235px;
    background: url('../../assets/images/about/left_nav_bg.jpg') right top no-repeat;
    float: left;
    min-height: 406px;

    .img-group {
        text-align: center;

        img {
            &:first-child {
                vertical-align: 10px;
                margin-right: 15px;
            }
        }
    }
}

.text-container {
    width: calc(100% - 235px);
    box-sizing: border-box;
    float: left;
    padding: 10px 30px;
    position: relative;
}

.body-button {
    color: white;
    background-color: #c0a264;
    outline: none;

    &:hover {
        background-color: #c0a264;
        border-color: #c0a264;
    }

    &:active {
        box-shadow: none;
        background-color: #c0a264;
        border-color: #c0a264;
    }
}

.list-group {
    border: 1px solid #f0e6d0;
    margin-bottom: 20px;
    height: 158px;
    overflow: hidden;

    &:hover {
        border-color: #cba650;
    }

    .img {
        width: 258px;
        height: 158px;
        float: left;
    }

    .content {
        float: left;
    }
}

