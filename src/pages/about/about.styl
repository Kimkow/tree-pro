.container {
    padding: 60px 0;
    overflow: hidden;
}

.menu {
    width: 235px;
    background: url('../../assets/images/about/left_nav_bg.jpg') right top no-repeat;
    float: left;
    min-height: 406px;

    .img-group {
        text-align: center;

        img {
            &:first-child {
                vertical-align: 10px;
                margin-right: 15px;
            }
        }
    }
}

.text-container {
    width: calc(100% - 235px);
    box-sizing: border-box;
    float: left;
    padding: 10px 30px;
    position relative
    h1 {
        color: #666666;
        font-family: 'Microsoft YaHei';
        font-size: 18px;
        line-height: 2;
    }

    p {
        line-height: 1.8;
        color: #999999;
        font-size: 14px;
        text-indent: 42px
    }

    img {
        width: 100%;
        display: block;
    }
}
.line {
    position: absolute;
    left: 10px;
    bottom: 0;
    width: 1px;
    background: url(../../assets/images/good_list_bg.png) top center repeat-y;
    height: 70%;
}

@media screen and (max-width: 960px) {
    .text-container {
        width: 100%;
    }
}