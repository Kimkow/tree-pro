:global {
    .myScroll {
        max-height: 140px;

        .scrollbar-container {
            &:hover {
                background-color: transparent !important;
            }
        }

        .scrollbar {
            background-color: rgb(192, 162, 100) !important;
            border-radius: 4px;
        }
    }
}

.container {
    padding: 60px 0;
    overflow: hidden;
}

.menu {
    width: 235px;
    background: url('../../assets/images/about/left_nav_bg.jpg') right top no-repeat;
    float: left;
    min-height: 406px;

    .img-group {
        text-align: center;

        img {
            &:first-child {
                vertical-align: 10px;
                margin-right: 15px;
            }
        }
    }
}

.text-container {
    width: calc(100% - 235px);
    box-sizing: border-box;
    float: left;
    padding: 10px 30px;
    position: relative;

    h1 {
        color: #666666;
        font-family: 'Microsoft YaHei';
        font-size: 18px;
        line-height: 2;
    }

    >p {
        line-height: 1.8;
        color: #999999;
        font-size: 14px;
        text-indent: 42px;
    }

    >img {
        width: 100%;
        display: block;
    }
}

.line {
    position: absolute;
    left: 10px;
    bottom: 0;
    width: 1px;
    background: url('../../assets/images/good_list_bg.png') top center repeat-y;
    height: 70%;
}

.list-container {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;

    .list {
        width: 286px;
        margin: 10px;

        img {
            width: 100%;
            height: 197px;
            border: 1px solid #e3d7bf;
            display: block;
            margin: 0 auto;
            cursor: pointer;
        }

        p {
            border-bottom: 1px solid #e9e0cf;
            line-height: 44px;
            text-align: center;
            color: #666;
            font-size: 14px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            text-indent: 0;
            margin: 0;
        }
    }
}

.active-box {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
    background-color: rgba(0, 0, 0, 0.8);

    .active-content {
        position: relative;
        z-index: 1002;

        .img {
            width: 70%;
            display: block;
            margin: 60px auto 10px;
        }

        .title {
            width: 70%;
            margin: 0 auto;
            font-size: 13px;
            font-weight: bold;
            line-height: 1em;
            color: #ccc;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            text-indent: 0;
        }

        .close-btn {
            position: absolute;
            z-index: 1003;
            top: -20px;
            right: 8%;
            display: block;
            width: 30px;
            height: 30px;
            background: url('../../assets/images/about/close.png') top right no-repeat;
            opacity: 0.7;
            -webkit-transition: opacity 0.2s;
            -moz-transition: opacity 0.2s;
            -o-transition: opacity 0.2s;
            transition: opacity 0.2s;
            cursor: pointer;
        }
    }
}

.history-list {
    overflow: hidden;

    &:not(:first-child) {
        padding-top: 25px;
        border-top: 1px solid #e9e0cf;
    }

    &.left {
        .history-img {
            .years {
                right: 0;
            }

            background: url('../../assets/images/about/history_lil_bg.jpg') right center no-repeat;
        }

        .history-body {
            h1 {
                background: url('../../assets/images/about/history_titlebg.jpg') left bottom no-repeat;
            }
        }
    }

    &.right {
        .history-img {
            float: right;

            .years {
                left: 0;
            }
        }

        .history-body {
            h1 {
                text-align: right;
                background: url('../../assets/images/about/history_titlebg.jpg') right bottom no-repeat;
            }
        }
    }

    .history-img {
        height: 196px;
        width: 331px;
        float: left;
        position: relative;

        .years {
            background: #c0a264;
            display: block;
            padding: 0 14px;
            height: 34px;
            line-height: 34px;
            color: white;
            font-size: 19px;
            font-weight: bold;
            font-family: arial;
            position: absolute;
            top: 84px;
        }
    }

    .history-body {
        width: calc(100% - 331px);
        box-sizing: border-box;
        padding: 0 20px;
        float: left;

        h1 {
            color: #666666;
            font-size: 18px;
            padding-top: 30px;
            padding-bottom: 15px;
            font-weight: normal;
            padding: 30px auto 15px;
            margin: 0;
        }

        .history-text {
            font-size: 14px;
            color: #999999;
            line-height: 24px;
        }
    }
}

@media screen and (max-width: 960px) {
    .text-container {
        width: 100%;
    }

    .history-list {
        .history-img {
            float: none !important;
            margin: 0 auto;
        }

        .history-body {
            width: 100%;
        }
    }
}