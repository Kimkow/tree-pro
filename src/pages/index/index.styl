  background-color: white;

  &.project {
    padding-left: 629px;
    padding-right: 151px;
    min-height: 600px;
    position: relative;
    background: url('../../assets/images/index_bg1.jpg') bottom center no-repeat;

    .project-left {
      position: absolute;
      top: 40px;
      left: 10px;
      width: 609px;
      height: 592px;
    }

    .project-middle {
      .project-group {
        text-align: left;
      }

      .project-middle-title {
