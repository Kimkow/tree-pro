.banner-box {
  width: 100%;
}

.banner {
  display: block;
  width: 100%;
}

.index-page {
  position: relative;
}

.title {
  position: absolute;
  top: 0;
  left: 10px;
  z-index: 99;
}

.swiper-container {
  position: relative;
}

.pagination {
  position: absolute;
  bottom: 30px;
  left: 50%;
  z-index: 99;
  transform: translateX(-50%);

  >span {
    width: 55px;
    height: 5px;
    display: inline-block;
    margin-right: 16px;
    background-color: white;
    border-radius: 4px;
    cursor: pointer;

    &.active {
      background-color: #c0a264;
    }

    &:last-child {
      margin-left: 0;
    }
  }
}

.mdUp {
  position: relative;
  top: 0;
  left: 0;
  height: 80px;
  display: block;

  >img {
    width: 80%;
    max-width: 331px;
    max-height: 110px;
    display: block;
  }
}

.pd-10 {
  padding: 0 10px;
}

.body {
  line-height: 2;
  color: #999999;
  box-sizing: border-box;

  .body-h1 {
    color: #666666;
    font-size: 24px;
    font-weight: bold;
    line-height: 27px;
    text-align: center;

    >span {
      color: #c0a264;
    }
  }

  .body-h3 {
    color: #666666;
    font-family: 'Microsoft YaHei';
    font-size: 18px;
    line-height: 2;
    margin: 1rem 0;
  }

  .body-p {
    margin: 1rem 0;
    text-indent: 36px;
    font-size: 14px;
  }

  .body-button {
    color: white;
    background-color: #c0a264;
    outline: none;

    &:hover {
      background-color: #c0a264;
      border-color: #c0a264;
    }

    &:active {
      box-shadow: none;
      background-color: #c0a264;
      border-color: #c0a264;
    }
  }

  .body-img {
    width: 100%;
    display: block;
  }
}

.white-body {
  padding: 30px 0px;
  background-color: white;
}

.project-group {
  width: 100%;
  text-align: center;

  >img {
    width: 96%;
    display: block;
    margin: 0 auto;
  }
}

.about {
  padding-top 30px;
  padding-bottom 30px;
  padding-left: 141px;
  position: relative;

  .about-left {
    width: 141px;
    height: 600px;
    position: absolute;
    top: 30px;
    left: 0;
    z-index: 99;
    background: url('../../assets/images/icont_tip_bg.png') top right no-repeat;

    >img {
      float: left;
      width: 15px;
      margin: 0 8px 0 30px;
    }

    .body-h1 {
      float: left;
      width: 45px;
      margin-top: 0;
      text-align: left;
      padding-top: 60px;
      background: url('../../assets/images/icont_tip_bg2.png') top left no-repeat;
      color: #666666;
      font-size: 24px;
      font-weight: bold;
      line-height: 27px;
    }
  }

  .about-right {
    padding 20px 0 20px 20px
    >p {
      text-align: left;
    }
  }
}
