.miaomu-group {
  width: 30%;
  position: relative;
  margin-right: 5% !important;

  &.mobile {
    width: 80%;
    margin-left 10%;

  }

  &:last-child {
    margin-right: 0 !important;
  }

  &::after {
    content: '';
    position: absolute;
    width: 90%;
    height: 92.5%;
    border: 2px solid white;
    top: 2.5%;
    left: 5%;
    z-index: 90;
  }
}

.miaomu-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 98;

  &:hover {
    background-color: rgba(192, 162, 100, 0.5);

    .miaomu-title {
      opacity: 1;

      &::after {
        opacity: 1;
      }
    }

    .miaomu-add {
      opacity: 1;
    }
  }
}

.miaomu-pic {
  width: 100%;
  height: 544px;
  display: inline-block;
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.miaomu-title {
  position: absolute;
  top: 40%;
  left: 50%;
  width: 100%;
  text-align: center;
  transform: translate(-50%, -50%);
  color: white;
  font-weight: bold;
  font-size: 20px;
  z-index: 91;
  opacity: 0;

  &::after {
    content: '';
    position: absolute;
    width: 30px;
    height: 1px;
    background-color: white;
    top: 50px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 91;
    opacity: 0;
  }
}

.miaomu-add {
  position: absolute;
  top: 60%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 60px !important;
  z-index: 99;
  opacity: 0;
}

.miaomu-pagination {
  text-align: center;
  margin-top: 20px;

  >span {
    display: inline-block;
    width: 12px;
    height: 12px;
    background-color: #ece4d6;
    margin: 5px 7px;
    border-radius: 100%;
    cursor: pointer;

    &.active {
      background-color: #c0a264;
    }
  }
}