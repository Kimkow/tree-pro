:global {
  .footer-container {
    color: red;

    a {
      text-decoration: none;
    }
  }
}

.footer-header {
  height: 240px;
  padding: 0 2vw;
  background-color: #c0a264;
  list-style: none;
  display: flex;
  flex-flow: row nowrap;
  text-align: center;
  margin: 0;

  >li {
    flex: 1 0;
    border-left: 1px solid #ddd;
    height: 100%;

    dl {
      padding: 50px 0;
      line-height: 24px;
      margin: 0;

      dt {
        height: 24px;
        color: #f2ece0;
        font-size: 14px;
        margin-bottom: 20px;
        border-left: 1px solid #fff;
      }

      dd {
        margin: 0;
        display: block;
        color: #ece3d1;
        font-size: 12px;

        a {
          &:visited {
            color: #ece3d1;
          }

          &:hover {
            font-weight: bold;
            color: black;
          }
        }
      }
    }
  }
}

.footer-body {
  border-top: 1px solid transparent;
  min-height: 113px;
  background: #fff url('../images/copyright_bg.jpg') bottom center no-repeat;
  // width: 100vw;
  position: relative;
  color: #747474;
  font-size: 12px;

  >p, >ul {
    padding: 0 10px;
    line-height: 24px;
    margin: 0;
  }

  >p {
  }

  >ul {
    list-style: none;
    margin-top: 40px;

    li {
      display: inline-block;
      position: relative;
      line-height: 24px;
      padding: 0 8px;

      a {
        &:visited {
          color: #747474;
        }

        &:hover {
          color: #c0a264;
        }
      }

      &:not(:last-child) {
        &:before {
          content: '';
          position: absolute;
          top: 25%;
          right: 0;
          width: 1px;
          height: 50%;
          background-color: #747474;
        }
      }
    }
  }

  .QR-box {
    position: absolute;
    top: 20px;
    right: 10px;

    >img {
      float: right;
    }

    >p {
      text-align: right;
      float: left;
      width: 190px;
      padding-right: 15px;
      background: url('../images/code_bg.jpg') right center no-repeat;
      margin-right: 10px;
    }
  }

  &.mobile {
    >p, >ul {
      text-align: center;
    }

    >img {
      display: block;
      margin: 0 auto;
    }
  }
}

.tree-menu {
  position: absolute;
  top: 1vw;
  right: 0;
  z-index: 100;
}

.menuLink {
  padding: 0;
  background-color: #C0A264 !important;
  border-bottom: 1px solid white !important;

  >a {
    color: white;
    display: block;
    width: 100%;
    height: 40px;
    line-height: 40px;
    font-size: 18px;
    padding: 0;
    margin: 0;
    text-align: center;
    text-decoration: none;
  }
}

.title-box {
  /* position: absolute;
  top: 0;
  right: 0;
  z-index: 99; */
  >div {
    display: inline-block;
    width: 63px;
    height: 162px;
    cursor: pointer;
    position: relative;

    &.on {
      >span {
        background: url('../images/menu/mnav_over.png') center bottom no-repeat;
      }
    }

    &:hover {
      >span {
        transition: all 1s ease;
        background: url('../images/menu/mnav_over.png') center bottom no-repeat;
        transform: rotateY(360deg);
      }
    }

    >span {
      padding-bottom: 1px;
      width: 63px;
      height: 162px;
      display: block;
      position: absolute;
      top: 0;

      >a {
        width: 63px;
        height: 120px;
        margin: 35px auto 0;
        display: block;
        background-repeat: no-repeat;
        background-position: center bottom;
      }
    }
  }
}

