.pagination {
  overflow: hidden;

  .count {
    float: left;
    span {
      padding: 0 10px;
    }
  }

  span {
    float: left;
    margin-right: 5px;
    cursor: pointer;
    border: 1px solid #eaeaea;
    height: 28px;
    line-height: 28px;
    font-size: 12px;
    color: #747474;
    padding: 0 20px;

    &.active {
      color: white;
      background-color: #c0a264;
      border: 1px solid #c0a264;
    }

    &:hover {
      color: white;
      background-color: #c0a264;
      border: 1px solid #c0a264;
    }
  }
}