.list {
  text-align: center;
  position: relative;
  padding-left: 0 !important;

  &::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: -10px;
    left: 0;
    background-color: #dbcbab;
  }

  &.active {
    &~.list-icon {
      color: #dbcbab;
    }

    span {
      color: #dbcbab;
    }
  }

  &:hover {
    &~.list-icon {
      color: #dbcbab;
    }

    span {
      color: #dbcbab;
    }
  }
}

.list-child {
  text-align: center;
  position: relative;
  padding-left: 0 !important;

  &.active {
    span {
      color: #dbcbab;
    }
  }

  &::after {
    content: '';
    position: absolute;
    width: 90%;
    height: 1px;
    bottom: -10px;
    left: 5%;
    background-color: #dbcbab;
  }

  &:hover {
    span {
      color: #dbcbab;
    }
  }
}

.list-icon {
  position: absolute;
  top: 10px;
  right: 20px;
}
.list-children-box{
  width 288px
  padding 25px 5px
  display: flex
  flex-flow: row wrap
  justify-content: space-around
  position absolute
  top 50%
  right -296px
  transform: translateY(-50%)
  background-color white
  border-radius 5px
  border: 1px solid #dbcbab
  .body-button {
    color: white;
    background-color: #c0a264;
    outline: none;

    &:hover {
      background-color: #c0a264;
      border-color: #c0a264;
    }

    &:active {
      box-shadow: none;
      background-color: #c0a264;
      border-color: #c0a264;
    }
  }
}