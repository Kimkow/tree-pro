.list {
  text-align: center;
  position: relative;
  padding-left: 0 !important;

  &::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: -10px;
    left: 0;
    background-color: #dbcbab;
  }

  &.active {
    &~.list-icon {
      color: #dbcbab;
    }

    span {
      color: #dbcbab;
    }
  }

  &:hover {
    &~.list-icon {
      color: #dbcbab;
    }

    span {
      color: #dbcbab;
    }
  }
}

.list-child {
  text-align: center;
  position: relative;
  padding-left: 0 !important;

  &.active {
    span {
      color: #dbcbab;
    }
  }

  &::after {
    content: '';
    position: absolute;
    width: 90%;
    height: 1px;
    bottom: -10px;
    left: 5%;
    background-color: #dbcbab;
  }

  &:hover {
    span {
      color: #dbcbab;
    }
  }
}

.list-icon {
  position: absolute;
  top: 10px;
  right: 20px;
}