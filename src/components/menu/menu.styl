.tree-menu {
  position: absolute;
  top: 1vw;
  right: 0;
  z-index: 100;
}

.menuLink {
  padding: 0;
  background-color: #C0A264 !important;
  border-bottom: 1px solid white !important;

  >a {
    color: white;
    display: block;
    width: 100%;
    height: 40px;
    line-height: 40px;
    font-size: 18px;
    padding: 0;
    margin: 0;
    text-align: center;
    text-decoration: none;
  }
}

.title-box {
  /* position: absolute;
  top: 0;
  right: 0;
  z-index: 99; */
  >div {
    display: inline-block;
    width: 63px;
    height: 162px;
    cursor: pointer;
    position: relative;

    &.on {
      >span {
        background: url('../../assets/images/menu/mnav_over.png') center bottom no-repeat;
      }
    }

    &:hover {
      >span {
        transition: all 1s ease;
        background: url('../../assets/images/menu/mnav_over.png') center bottom no-repeat;
        transform: rotateY(360deg);
      }
    }

    >span {
      padding-bottom: 1px;
      width: 63px;
      height: 162px;
      display: block;
      position: absolute;
      top: 0;

      >a {
        width: 63px;
        height: 120px;
        margin: 35px auto 0;
        display: block;
        background-repeat: no-repeat;
        background-position: center bottom;
      }
    }
  }
}

