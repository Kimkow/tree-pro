  &.on {
    >span {
      >a {
        background-image: url('../../assets/images/menu/mnav_1_on.png');
      }
    }
  }

  &:hover {
    >span {
      >a {
        background-image: url('../../assets/images/menu/mnav_1_on.png');
      }
    }
  }

